{
  "name": "discovery-service",
  "version": "1.0.0",
  "description": "Discovery service",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "nyc mocha -r ts-node/register 'test/**/*test.ts'",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node dist/",
    "start:watch": "nodemon"
  },
  "keywords": [
    "discovery",
    "service"
  ],
  "author": "gRizzlyGR",
  "license": "Apache-2.0",
  "dependencies": {
    "ajv": "^6.12.3",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lokijs": "^1.5.9",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/chai-as-promised": "^7.1.2",
    "@types/express": "^4.17.7",
    "@types/lokijs": "^1.5.3",
    "@types/mocha": "^7.0.2",
    "@types/morgan": "^1.9.1",
    "@types/node": "^12.12.51",
    "@types/sinon": "^9.0.0",
    "@types/supertest": "^2.0.10",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "sinon": "^9.0.2",
    "supertest": "^4.0.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.9.7"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  },
  "nodemonConfig": {
    "ignore": [
      "**/*test.ts",
      "**/*spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
